    <!-- inline scripts related to this page -->

    <script type="text/javascript">
        function show_box(id) {
            jQuery('.widget-box.visible').removeClass('visible');
            jQuery('#' + id).addClass('visible');
        }
        $(sub).click(function () {
            $.post('/login', {
                user: $(user).val(),
                pass: $(pass).val()
            }, function (res) {
                if (res.code === 200) {
                    window.location.href = "/"
                }
            })
        })
    </script>
</body>

